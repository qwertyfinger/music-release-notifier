<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qwertyfinger.musicreleasetracker"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.qwertyfinger.musicreleasetracker.App"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.qwertyfinger.musicreleasetracker.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qwertyfinger.musicreleasetracker.activities.AddArtistActivity"
            android:label="@string/title_activity_add_subscriptions"
            android:launchMode="singleTop"
            android:parentActivityName="com.qwertyfinger.musicreleasetracker.activities.MainActivity" >

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qwertyfinger.musicreleasetracker.activities.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <provider
            android:name="com.qwertyfinger.musicreleasetracker.contentProviders.MySuggestionProvider"
            android:authorities="com.qwertyfinger.musicreleasetracker.contentProviders.MySuggestionProvider" >
        </provider>

        <activity
            android:name="com.qwertyfinger.musicreleasetracker.activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.qwertyfinger.musicreleasetracker.activities.MainActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MANAGE_NETWORK_USAGE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qwertyfinger.musicreleasetracker.activities.MainActivity" />
        </activity>
    </application>

</manifest>
